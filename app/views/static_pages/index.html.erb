<h1>Users</h1>

<% @users.each do |user| %>
    <h3><%= user.email %></h3>
    <br />
    <% if user.posts.exist? %>
        <h4>Last Post</h4>
        <br />
        <%= link_to user.posts.last.title, post_path(user.posts.last) %>
        <br />
        <%= model_date(user.posts.last) %>
        <hr />
    <% end %>
    <% if user.comments.exist?  %>
        <h4>Last Comment</h4>
        <br />
        <%= link_to user.comments.last.content, post_path(user.comments.last.post) %>
        <br />
        <%= model_date(user.comments.last) %>
        <hr />
    <% end %>
    <% if user.like_posts.exist? %>
        <h4>Last Liked Post</h4>
        <br />
        <%= link_to user.like_posts.last.title, post_path(user.like_posts.last) %>
        <br />
        <%= model_date(user.like_posts.last) %>
        <hr />
    <% end %>
    <%= link_to 'View Profile', "/users/profiles/#{user.id}" %>
    <% if user.friends.exist? || user.added_by_friends.exist? %>
        <%= link_to 'Friends', "/users/profiles/#{user.id}/friends" %>
    <% end %>
    <% if current_user.admin? && current_user != user %>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
    <hr />
<% end %>