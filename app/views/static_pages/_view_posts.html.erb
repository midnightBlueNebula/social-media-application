<% @posts.each do |post| %>
    <%= link_to post.title, post_path(post) %>
    <br />
    Sended by: <%= post.user.email %>
    <br />
    <%= model_date(post) %>
    <% if current_user.admin? %>
        | <%= link_to 'Delete', post, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
    <hr />
<% end %>